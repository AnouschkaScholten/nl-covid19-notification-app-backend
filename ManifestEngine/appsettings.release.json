{
  "ConnectionStrings": {
    "Content": "Data Source=#{Common.DatabaseServer}#;Initial Catalog=#{Common.Content.DatabaseName}#;Integrated Security=True"
  },
  "Certificates":
  {
    "NL": {
      "Thumbprint": "#{Deploy.DbProvision.NL.CertificateThumbprint}#",
      "RootTrusted": "false",
      "Chain": { "Path": "NL.Rijksoverheid.ExposureNotification.BackEnd.Components.Resources.StaatDerNLChain-Expires2020-08-28.p7b" }
    }
  },
  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": "#{Deploy.ManifestEngine.Elk.MinimumLevel}#",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "#{Deploy.Elk.ElasticsearchUrl}#",
          "indexFormat": "covid-{0:yyyy.MM.dd}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "ApplicationComponent": "ManifestEngine",
      "ApplicationIdentifier": "COVID"
    }
  }
}
