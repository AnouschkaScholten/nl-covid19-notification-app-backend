{
  "ConnectionStrings": {
    "Content": "Data Source=#{Common.DatabaseServer}#;Initial Catalog=#{Common.Content.DatabaseName}#;Integrated Security=True",
    "WorkFlow": "Data Source=#{Common.DatabaseServer}#;Initial Catalog=#{Common.WorkFlow.DatabaseName}#;Integrated Security=True",
    "PublishingJob": "Data Source=#{Common.DatabaseServer}#;Initial Catalog=#{Common.PublishingJob.DatabaseName}#;Integrated Security=True"
  },
  "Certificates":
  { 
    "GA":
    {
      "Thumbprint":"#{Deploy.DbProvision.GA.CertificateThumbprint}#",
      "RootTrusted":"false"
    },
    "NL": {
      "Thumbprint": "#{Deploy.DbProvision.NL.CertificateThumbprint}#",
      "RootTrusted": "false",
      "Chain": { "Path": "NL.Rijksoverheid.ExposureNotification.BackEnd.Components.Resources.StaatDerNLChain-Expires2020-08-28.p7b" }
    }
  },
  //Only add this section if the desired values are different from below.
  "ExposureKeySets": 
  {
    "Capacity":20, //Live value is 750000 but we want to test multiple keysets
    "LifetimeDays": 14,
    "SignatureHeader": 
    {
      "AppBundleId":"nl.rijksoverheid.en.test",
      "VerificationKeyId":"204",
      "VerificationKeyVersion":"v2t"
    }
  },
  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": "#{Deploy.EksEngine.Elk.MinimumLevel}#",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "#{Deploy.Elk.ElasticsearchUrl}#",
          "indexFormat": "covid-{0:yyyy.MM.dd}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "ApplicationComponent": "EksEngine",
      "ApplicationIdentifier": "COVID"
    }
  }
}
